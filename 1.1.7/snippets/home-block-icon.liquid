{% if settings.enable_block_icon %}
<div class="row block-icon">
  {% for i in (1..3) %}
  {% capture block_icon %}block_icon_{{ i }}{% endcapture %}
  {% capture block_icon_title %}block_icon_title_{{ i }}{% endcapture %}
  {% capture block_icon_subtitle %}block_icon_subtitle_{{ i }}{% endcapture %}
  <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
    <div class="feature-box-hover">
      <div class="feature-box">
        <div class="feature-box-icon primary">
          <i class="{{ settings[block_icon] }}"></i>
        </div>
        <div class="feature-box-info">
          <h4>{{ settings[block_icon_title] }}</h4>
          <p>{{ settings[block_icon_subtitle] }}</p>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endif %}