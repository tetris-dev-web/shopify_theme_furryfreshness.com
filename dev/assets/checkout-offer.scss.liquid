#checkout-special-offer-wrapper {
  display: none;
}

.order-summary__special-offer {
  border-top: solid 1px rgba(175,175,175,0.34);
  
  .offer-title {
    font-weight: 700;
    margin-bottom: 15px;
  }
  
  .btn {
    float: left;
    font-size: 17px;
    padding-top:0.8em;
    padding-bottom: 0.8em;
    
    &.btn-offer-add {
      background-color: #1690C6;
    }
    
    &.btn-offer-remove {
      background-color: #c42903;
    }
  }
}