<!-- Facebook pixel events by Codematic-->
<script>
  window.addEventListener("load", function(){
    product_ = {{ product | json }};
    cart_ = {{ cart | json }}
      
      if (product_) {
        fbq('track', 'ViewContent', { content_name: product_.title,
                                 content_category: product_.type,
                                 content_ids: [product_.id],
                                 value: product_.price/100,
                                 currency: cart_.currency,
                                 content_type: "product_group"
                                });
      }
    else{
      fbq('track', 'ViewContent');
    }
});
</script>