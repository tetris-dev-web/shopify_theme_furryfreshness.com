<div class="brand-bottom">
  
  <div class="heading-block">
    <h3 class="title">{{ settings.brand_title }}</h3>
  </div>
  <div id="logo-brand" class="owl-carousel owl-theme">
    
    {% for i in (1..6) %}   
    {% capture modulo %}{{ i | modulo:1 }}{% endcapture %}    
  	{% if modulo == '0' %}

      {% capture thumb %}brand_thumb{{ i }}.png{% endcapture %}
      {% capture thumbs %}brand_thumb{{ i | plus: 1 }}.png{% endcapture %}

        <div class="item a-center">       
          
            <img src="{{ thumb | asset_url }}" alt="brand{{ i }}" />

        </div>    

    {% endif %}
    {% endfor %}
  </div>

<script>
  $(document).ready(function() {
    $("#logo-brand").owlCarousel({
      itemsCustom : [ 
        [0, 1],
        [450, 2],
        [600, 3],
        [700, 4],
        [1000, 5],
        [1200, 6],
        [1400, 6],
        [1600, 6]
      ],
      autoPlay : true,
      stopOnHover : false,

      lazyLoad : false,
      lazyFollow : true,
      lazyEffect : "fade",
      pagination : true,

      // Navigation
      navigation : false,
      //navigationText : ['<i class="arrow_carrot-left"></i>','<i class="arrow_carrot-right"></i>'],
      //rewindNav : true,
      //scrollPerPage : false,

    });
  })
</script>

</div>